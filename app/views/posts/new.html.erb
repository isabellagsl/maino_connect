<h1>Posts#new</h1>
<p>Find me in app/views/posts/new.html.erb</p>
<%= form_with model: @post do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>

    <div>
        <%= form.label :content %>
        <%= form.textarea :content %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>
